<views:MvxWpfView
    x:Class="NotatnikMechanika.WPF.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="GridMenu"
            Width="200"
            HorizontalAlignment="Left"
            Background="#FF116FA4">
            <StackPanel>
                <Grid Height="130" Background="White"/>
            </StackPanel>
            <Button
                Width="170"
                Height="30"
                Margin="0,140,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FF0074FF"
                BorderThickness="0,0,0,0"
                Command="{Binding NavigateCommand}"
                CommandParameter="Orders"
                Content="Zlecenia"
                FontSize="20">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
            <Button
                Width="170"
                Height="30"
                Margin="0,180,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FF0074FF"
                BorderThickness="0,0,0,0"
                Command="{Binding NavigateCommand}"
                CommandParameter="Clients"
                Content="Stali klienci"
                FontSize="20">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
            <Button
                Width="170"
                Height="30"
                Margin="0,220,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FF0074FF"
                BorderThickness="0,0,0,0"
                Command="{Binding NavigateCommand}"
                CommandParameter="Services"
                Content="Usługi"
                FontSize="20">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
            <Button
                Width="170"
                Height="30"
                Margin="0,260,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FF0074FF"
                BorderThickness="0,0,0,0"
                Command="{Binding NavigateCommand}"
                CommandParameter="Archives"
                Content="Archiwum"
                FontSize="20">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
            <Button
                Width="170"
                Height="30"
                Margin="0,300,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FF0074FF"
                BorderThickness="0,0,0,0"
                Command="{Binding NavigateCommand}"
                CommandParameter="Invoices"
                Content="Faktury/Paragony"
                FontSize="20">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
            <Button
                Width="170"
                Height="30"
                Margin="0,340,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FF0074FF"
                BorderThickness="0,0,0,0"
                Command="{Binding NavigateCommand}"
                CommandParameter="Magazine"
                Content="Magazyn"
                FontSize="20">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1"/>
                </Button.Effect>
            </Button>
        </Grid>
    </Grid>
</views:MvxWpfView>