            <StackLayout Padding="15">
                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Orders"
                    Text="Zlecenia"/>

                <Button
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Clients"
                    Text="Klienci"/>
            </StackLayout>

            <StackLayout Padding="15" VerticalOptions="EndAndExpand">
                <Button Text="Ustawienia"/>
                <Button Command="{Binding LogoutCommand}" Text="Wyloguj"/>
            </StackLayout>
        </StackLayout>
    </views:MvContentPage.Content>
