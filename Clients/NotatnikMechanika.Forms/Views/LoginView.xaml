<views:MvxContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:d="http://xamarin.com/schemas/2014/forms/design"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d"
            xmlns:viewModels="clr-namespace:NotatnikMechanika.Core.ViewModels;assembly=NotatnikMechanika.Core"
            xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
            Title="Zaloguj"
            x:TypeArguments="viewModels:LoginViewModel"
            x:Class="NotatnikMechanika.Forms.Views.LoginView">
    <views:MvxContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Image Source="icon_foreground.xml"/>
            <Label Text="Zaloguj się do Notatnika Mechanika aby uzyskać dostęp do konta."/>

            <Entry Placeholder="E-mail" Text="{Binding Login}"/>
            <Entry Placeholder="Hasło" Text="{Binding Password}"/>

            <StackLayout Orientation="Horizontal">
                <CheckBox/>
                <Label Text="Zapamiętaj mnie."/>
            </StackLayout>

            <Button Text="Zaloguj" Command="{Binding LoginCommand}"/>
        </StackLayout>
    </views:MvxContentPage.Content>
</views:MvxContentPage>

