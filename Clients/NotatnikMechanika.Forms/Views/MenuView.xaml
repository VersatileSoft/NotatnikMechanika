<views:MvxContentPage
    x:Class="NotatnikMechanika.Forms.Views.MenuView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:NotatnikMechanika.Core.ViewModels;assembly=NotatnikMechanika.Core"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    Title="Placeholder"
    x:TypeArguments="viewModels:MenuViewModel"
    Visual="Material"
    mc:Ignorable="d">
    <views:MvxContentPage.Content>
        <StackLayout>
            <Grid HeightRequest="200">
                <Image IsOpaque="False" Source="icon_background.xml"/>
                <Image IsOpaque="True" Source="icon_foreground.xml"/>

                <StackLayout
                    Margin="5,0,0,5"
                    HorizontalOptions="Fill"
                    Orientation="Horizontal"
                    VerticalOptions="EndAndExpand">
                    <Image
                        HeightRequest="20"
                        IsOpaque="True"
                        Source="RegularClientsIcon.xml"
                        VerticalOptions="Center"
                        WidthRequest="20"/>

                    <Label
                        FontSize="Medium"
                        Text="Michał 'Grubas' Woźniak"
                        TextColor="White"
                        VerticalOptions="Center"/>
                </StackLayout>
            </Grid>

            <!--<CollectionView>
