<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <UseWPF>true</UseWPF>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <ApplicationIcon>Assets\AppIcon.ico</ApplicationIcon>
    <StartupObject>NotatnikMechanika.WPF.App</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\AppIcon_Light.png" />
    <None Remove="Views\CustomersView.xaml" />
    <None Remove="Views\CustomerView.xaml" />
    <None Remove="Views\LoginView.xaml" />
    <None Remove="Views\MenuView.xaml" />
    <None Remove="Views\OrdersView.xaml" />
    <None Remove="Views\RegistrationView.xaml" />
    <None Remove="Views\Utils\AddCustomerView.xaml" />
    <None Remove="Views\Utils\ButtonIndicator.xaml" />
    <None Remove="Views\Utils\IconButton.xaml" />
    <None Remove="Views\Utils\MenuButton.xaml" />
    <None Remove="Views\Utils\NotificationsSnackbar.xaml" />
    <None Remove="Views\Utils\TopBar.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="1.6.5" />
    <PackageReference Include="MaterialDesignThemes" Version="2.6.0" />
    <PackageReference Include="MvvmCross" Version="6.3.1" />
    <PackageReference Include="MvvmCross.Platforms.Wpf" Version="6.3.1" />
    <PackageReference Include="PropertyChanged.Fody" Version="3.1.0" />
    <PackageReference Include="System.Windows.Interactivity.WPF" Version="2.0.20525" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NotatnikMechanika.Core\NotatnikMechanika.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\AppIcon_Light.png" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
</Project>